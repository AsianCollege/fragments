<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.asmt.fragments.MainActivity"
    tools:ignore="MergeRootFrame" 
    android:orientation="vertical">
    
    <Button
        android:id="@+id/btnSimpleFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Simple Fragment"
        android:onClick="simpleFragment"
        />
    <Button
        android:id="@+id/btnMultipleFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Multiple Fragment"
        android:onClick="multipleFragment"
        />
        
    
</LinearLayout>

